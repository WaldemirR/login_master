<h1> Editar Senha</h1>

<%= form_with model: Current.user, url: edit_password_path do |form| %>
    <% if form.object.errors.any? %>
<div class="alert alert-danger">
    <% form.object.errors.full_messages.each do |message| %>
<div>
    <%= message %>
</div>
    <% end %>
    </div>
<% end %>

<div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class:"form-control", placeholder: "Digite a senha desejada" %>
</div>

<div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Confirme a senha digitada" %>
</div>
<div class="mb-3">
    <%= form.submit "Editar Senha", class:"btn btn-primary" %> 
</div>

<% end %>  